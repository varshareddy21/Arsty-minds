<!DOCTYPE html>
<html lang="en">
 <head>
  <link href="/css/styles.css" rel="stylesheet" type="text/css"/>
  <title>saved Connections</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
 </head>
 <body>
   <% include partials/header.ejs %>
   <% include partials/navigation.ejs %>
  <div class="main">
   <div class="content">
       <%if(error && error.length>0){%>
           <p style="text-align:center">    <%= error%>  </p>
       <%}%>
    <div class="table">
     <table>
      <tr>
       <th>Connection</th>
       <th>category</th>
       <th>Going?</th>
       <th></th>
      </tr>
      <tbody>
              <% for(var i=0; i< data.userConnectionList.length ;i++) { %>
            <tr>
              <td class="connectionTable"><%= data.userConnectionList[i].connectionName %></td>
              <td class="connectionTable"><%= data.userConnectionList[i].connectionTopic%>  </td>
              <td class="connectionTable"><%= data.userConnectionList[i].rsvp%> </td>
              <td>
                <a class="button1"  href="/connections/connection/<%= data.userConnectionList[i].connectionId %>" >Update</a>
                <a class="button2"  href="/savedConnections/delete/<%= data.userConnectionList[i].connectionId%>">Remove</a>
              </td>
            </tr>
            <% } %>
          </tbody>
     </table>
    </div>
   </div>
  </div>
  <% include partials/footer.ejs %>
 </body>
</html>
